<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/appGreen"
    android:layout_marginStart="0dp"
    android:layout_marginLeft="0dp"
    tools:context="com.jss.artha.MainActivity">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="200dp"
        android:layout_height="152dp"
        android:layout_marginTop="130dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/artha_logo_whitecolor" />
    <TextView
        android:id="@+id/textView5"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/nunito_sans_extralight"
        android:lines="2"
        android:text="Create your \n free account"
        android:textSize="20sp"
        android:textStyle="bold"
        />


    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/phone1"
            android:layout_width="269dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:background="@drawable/curve_textview"
            android:hint="Enter mobile number"
            android:inputType="numberSigned"
            android:maxLength="10"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            />

        <ImageButton
            android:id="@+id/phonecorrect"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:background="@color/white_light"
            android:scaleType="fitCenter"
            android:src="@drawable/close"
            android:tint="@android:color/holo_red_light"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/phone1"
            app:layout_constraintHorizontal_bias="0.855"
            app:layout_constraintStart_toStartOf="@+id/phone1"
            app:layout_constraintTop_toTopOf="@+id/phone1" />
    </android.support.constraint.ConstraintLayout>



    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/username"
            android:layout_width="269dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:background="@drawable/curve_textview"
            android:hint="Choose username"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            />

        <ImageButton
            android:id="@+id/usercorrect11"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:background="@color/white_light"
            android:scaleType="fitCenter"
            android:src="@drawable/close"
            android:tint="@android:color/holo_red_light"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/username"
            app:layout_constraintHorizontal_bias="0.855"
            app:layout_constraintStart_toStartOf="@+id/username"
            app:layout_constraintTop_toTopOf="@+id/username" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="269dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:radius="360dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/curve_button"
        android:text="Next"
        />



</LinearLayout>