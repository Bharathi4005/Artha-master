<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroud_image"
    android:layout_gravity="center"
    android:layout_marginStart="0dp"
    tools:context="com.jss.artha.First_Page"
    android:layout_marginLeft="0dp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:scaleType="fitCenter"
        android:textAlignment="center"
        app:srcCompat="@drawable/artha_logo_whitecolor" />
    <EditText
        android:id="@+id/phone1"
        android:layout_width="228dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/curve_textview"
        android:hint="Enter mobile number"
        android:inputType="numberSigned"
        android:maxLength="10"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
         />

    <Button
        android:id="@+id/login"
        android:layout_width="232dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/curve_button"
        android:radius="360dp"
        android:layout_gravity="center"
        android:text="Sign-In"
        app:layout_constraintTop_toBottomOf="@+id/phone1" />


    <Button
        android:id="@+id/signup"
        android:layout_width="255dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:background="#00000000"
        android:text="New User? Register for free"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/login" />

    <Button
        android:id="@+id/privacy"
        android:layout_width="255dp"
        android:layout_height="39dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:background="#00000000"
        android:text="Terms and Privacy Policy"
        android:layout_gravity="center"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/signup"/>


</LinearLayout>


