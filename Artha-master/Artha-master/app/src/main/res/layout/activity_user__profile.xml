<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/appGreen"
    xmlns:android="http://schemas.android.com/apk/res/android">
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/appGreen"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appGreen"
    tools:context="com.jss.artha.User_Profile">

<RelativeLayout
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="142dp"
        android:layout_height="79dp"
        android:background="@color/appGreen"
        android:backgroundTint="@color/appGreen"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center"
        app:srcCompat="@drawable/profile" />
</RelativeLayout>
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/mobile"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Mobile Number"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintHorizontal_bias="0.502" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:layout_gravity="center"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:transformPivotX="@dimen/activity_horizontal_margin"
        android:weightSum="10"
        app:layout_constraintTop_toBottomOf="@id/username"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/firstname"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/curve_button2"
            android:backgroundTint="@color/white"
            android:hint="First name"
            android:digits="qwertyuioplkjhgfdsazxcvbnm ,QWERTYUIPOLKJHGFDSAZXCVBNM"
            android:inputType="textCapCharacters"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/mobile" />

        <EditText
            android:id="@+id/lastname"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/curve_button2"
            android:backgroundTint="@color/white"
            android:editable="true"
            android:digits="qwertyuioplkjhgfdsazxcvbnm ,QWERTYUIPOLKJHGFDSAZXCVBNM"
            android:hint="Last Name"
            android:inputType="textCapCharacters"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/mobile" />

        <Spinner
            android:id="@+id/gender"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/curve_button2"
            android:backgroundTint="@color/white"
            android:editable="true"
            android:hint="Gender"
            android:textSize="10sp"
            android:padding="5dp"
            android:inputType="none"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"

            app:layout_constraintTop_toBottomOf="@+id/mobile" />

        <EditText
            android:id="@+id/dob"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/curve_button2"
            android:backgroundTint="@color/white"
            android:editable="true"
            android:hint="DOB"
            android:clickable="true"
            android:focusable="false"
            android:maxLength="10"
            android:inputType="date"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/mobile" />

        <EditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/curve_button2"
            android:backgroundTint="@color/white"
            android:editable="true"
            android:hint="Email"
            android:inputType="textCapCharacters"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/mobile" />

